{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules"]
}
